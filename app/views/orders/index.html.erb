<% content_for :title, "주문 목록" %>

<div class="flex flex-col gap-6">
  <%# Header %>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">주문 목록</h1>
      <p class="text-sm text-gray-500 mt-1">전체 RFQ 및 주문 현황</p>
    </div>
    <% if can_create?("orders") %>
      <%= link_to new_order_path, class: "inline-flex items-center gap-1.5 px-3 py-2 bg-primary text-white text-sm font-medium rounded-lg hover:bg-primary/90 transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
        주문 추가
      <% end %>
    <% end %>
  </div>

  <%# 검색 및 필터 %>
  <div class="flex items-center gap-3">
    <%= form_with url: orders_path, method: :get, class: "flex items-center gap-2 flex-1" do |f| %>
      <div class="relative flex-1 max-w-xs">
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
        <%= f.text_field :q, value: params[:q], placeholder: "주문명, 고객명 검색...",
            class: "w-full pl-9 pr-4 py-2 text-sm border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/30" %>
      </div>
      <%= f.select :status, [["전체 상태", ""], *Order::STATUS_LABELS.map { |k,v| [v, k] }],
          { selected: params[:status] },
          class: "text-sm border border-gray-200 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary/30" %>
      <%= f.submit "검색", class: "px-4 py-2 text-sm bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 cursor-pointer" %>
    <% end %>
  </div>

  <%# 주문 목록 %>
  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <% if @orders.any? %>
      <table class="min-w-full divide-y divide-gray-100">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">주문명</th>
            <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">고객사</th>
            <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">상태</th>
            <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">우선순위</th>
            <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">마감일</th>
            <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">담당자</th>
            <th class="px-5 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-50">
          <% @orders.each do |order| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-5 py-3">
                <div>
                  <p class="text-sm font-medium text-gray-900 truncate max-w-xs"><%= order.title %></p>
                  <% if order.item_name.present? %>
                    <p class="text-xs text-gray-400"><%= order.item_name %></p>
                  <% end %>
                </div>
              </td>
              <td class="px-5 py-3 text-sm text-gray-600"><%= order.customer_name %></td>
              <td class="px-5 py-3">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case order.status
                      when 'inbox' then 'bg-gray-100 text-gray-700'
                      when 'rfq_received' then 'bg-blue-100 text-blue-700'
                      when 'in_progress' then 'bg-yellow-100 text-yellow-700'
                      when 'completed' then 'bg-green-100 text-green-700'
                      when 'cancelled' then 'bg-red-100 text-red-700'
                      else 'bg-gray-100 text-gray-700'
                      end %>">
                  <%= Order::STATUS_LABELS[order.status] || order.status %>
                </span>
              </td>
              <td class="px-5 py-3">
                <% case order.priority
                   when "urgent" %>
                  <span class="inline-flex items-center gap-1 text-xs text-red-600">
                    <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span> 긴급
                  </span>
                <% when "high" %>
                  <span class="inline-flex items-center gap-1 text-xs text-orange-600">
                    <span class="w-1.5 h-1.5 rounded-full bg-orange-400"></span> 높음
                  </span>
                <% else %>
                  <span class="text-xs text-gray-400">보통</span>
                <% end %>
              </td>
              <td class="px-5 py-3 text-sm text-gray-600">
                <%= order.due_date&.strftime("%m/%d") || "-" %>
              </td>
              <td class="px-5 py-3">
                <div class="flex -space-x-1">
                  <% order.assignees.first(3).each do |user| %>
                    <div class="w-6 h-6 rounded-full bg-primary/10 border border-white flex items-center justify-center text-primary text-xs font-bold"
                         title="<%= user.name %>">
                      <%= user.name.first.upcase %>
                    </div>
                  <% end %>
                </div>
              </td>
              <td class="px-5 py-3 text-right">
                <%= link_to order_path(order), class: "text-xs text-primary hover:underline" do %>상세<% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-12 text-center">
        <svg class="w-12 h-12 mx-auto text-gray-200 mb-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"/><rect x="9" y="3" width="6" height="4" rx="1"/></svg>
        <p class="text-sm text-gray-400">주문이 없습니다.</p>
        <% if can_create?("orders") %>
          <%= link_to new_order_path, class: "mt-3 inline-flex text-sm text-primary hover:underline" do %>첫 주문 추가하기 →<% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
