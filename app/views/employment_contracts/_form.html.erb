<%= form_with model: [@employee, contract], class: "flex flex-col gap-4" do |f| %>
  <% if contract.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
      <% contract.errors.full_messages.each do |msg| %><p><%= msg %></p><% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :start_date, "계약 시작일 *", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.date_field :start_date, required: true, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :end_date, "계약 종료일", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.date_field :end_date, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :base_salary, "기본급", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.number_field :base_salary, step: "any", class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :currency, "통화", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.select :currency, [["USD", "USD"], ["AED", "AED"], ["KRW", "KRW"], ["EUR", "EUR"]], {},
          class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :pay_frequency, "지급 주기", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.select :pay_frequency, [["월급", "monthly"], ["격월", "bi-monthly"], ["주급", "weekly"]], {},
          class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :status, "상태", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.select :status, [["계약중", "active"], ["만료", "expired"], ["해지", "terminated"], ["갱신됨", "renewed"]], {},
          class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div class="col-span-2">
      <%= f.label :project_id, "배정 현장 (선택)", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.select :project_id,
          @projects.map { |p| [p.name, p.id] },
          { include_blank: "현장 없음" },
          class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div class="col-span-2">
      <%= f.label :notes, "메모", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.text_area :notes, rows: 2, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary resize-none" %>
    </div>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "취소", @employee, class: "px-4 py-2 border border-gray-200 rounded-lg text-sm text-gray-600 hover:bg-gray-50" %>
    <%= f.submit contract.new_record? ? "계약 등록" : "저장",
        class: "px-4 py-2 bg-primary text-white rounded-lg text-sm font-medium hover:bg-primary-dark cursor-pointer" %>
  </div>
<% end %>
