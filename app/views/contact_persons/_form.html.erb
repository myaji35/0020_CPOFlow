<%= form_with model: [@contactable, @contact_person], local: true, class: "space-y-5" do |f| %>
  <% if @contact_person.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <% @contact_person.errors.full_messages.each do |msg| %><p class="text-sm text-red-700"><%= msg %></p><% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :name, "이름 *", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :title, "직책", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary", placeholder: "예: Procurement Manager" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :phone, "전화", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :phone, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :whatsapp, "WhatsApp", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :whatsapp, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :wechat, "WeChat", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :wechat, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :language, "언어", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :language,
          options_for_select(ContactPerson::LANGUAGES.map { |k, v| [v, k] }, @contact_person.language || "en"),
          {}, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :nationality, "국적", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :nationality, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
  </div>

  <div class="flex items-center gap-2">
    <%= f.check_box :primary, class: "rounded border-gray-300 text-primary focus:ring-primary" %>
    <%= f.label :primary, "주담당자로 설정 ★", class: "text-sm font-medium text-gray-700" %>
  </div>

  <div>
    <%= f.label :notes, "비고", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :notes, rows: 2, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
  </div>

  <div class="flex gap-3 pt-2">
    <%= f.submit @contact_person.new_record? ? "등록" : "수정", class: "bg-primary text-white px-6 py-2 rounded-lg text-sm font-medium hover:bg-primary-dark transition-colors cursor-pointer" %>
    <%= link_to "취소", @contactable, class: "border border-gray-200 text-gray-600 px-6 py-2 rounded-lg text-sm font-medium hover:bg-gray-50" %>
  </div>
<% end %>
