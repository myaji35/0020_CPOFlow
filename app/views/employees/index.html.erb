<% content_for :title, "직원 관리" %>

<div class="flex flex-col gap-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">직원 관리</h1>
      <p class="text-sm text-gray-500 mt-1">비자/근무조건 선제 관리</p>
    </div>
    <%= link_to new_employee_path, class: "inline-flex items-center gap-2 bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-primary-dark transition-colors" do %>
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      직원 등록
    <% end %>
  </div>

  <!-- 통계 카드 -->
  <div class="grid grid-cols-4 gap-4">
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4">
      <p class="text-xs text-gray-500">총 직원</p>
      <p class="text-2xl font-bold text-gray-900 mt-1"><%= @stats[:total] %></p>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4">
      <p class="text-xs text-gray-500">현재 파견중</p>
      <p class="text-2xl font-bold text-primary mt-1"><%= @stats[:dispatched] %></p>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4 <%= @stats[:visa_expiring] > 0 ? 'border-yellow-200' : '' %>">
      <p class="text-xs text-gray-500">비자 만료 임박 (60일)</p>
      <p class="text-2xl font-bold <%= @stats[:visa_expiring] > 0 ? 'text-yellow-600' : 'text-gray-900' %> mt-1"><%= @stats[:visa_expiring] %></p>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4 <%= @stats[:contract_expiring] > 0 ? 'border-orange-200' : '' %>">
      <p class="text-xs text-gray-500">계약 만료 임박 (30일)</p>
      <p class="text-2xl font-bold <%= @stats[:contract_expiring] > 0 ? 'text-orange-600' : 'text-gray-900' %> mt-1"><%= @stats[:contract_expiring] %></p>
    </div>
  </div>

  <!-- 검색/필터 -->
  <%= form_with url: employees_path, method: :get, class: "flex gap-2 flex-wrap items-center" do |f| %>
    <%= f.text_field :q, value: params[:q], placeholder: "이름 검색...",
        class: "border border-gray-200 rounded-lg px-3 py-2 text-sm w-48 focus:outline-none focus:border-primary" %>
    <%= f.select :type, [["전체 고용형태", ""], ["정규직", "regular"], ["계약직", "contract"], ["파견", "dispatch"]],
        { selected: params[:type] },
        class: "border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    <label class="inline-flex items-center gap-1.5 text-sm text-gray-600 cursor-pointer">
      <%= f.check_box :deployed, { checked: params[:deployed] == "1" }, "1", "" %>
      파견중만
    </label>
    <label class="inline-flex items-center gap-1.5 text-sm text-gray-600 cursor-pointer">
      <%= f.check_box :show_inactive, { checked: params[:show_inactive] == "1" }, "1", "" %>
      퇴직자 포함
    </label>
    <%= f.submit "검색", class: "bg-primary text-white px-4 py-2 rounded-lg text-sm hover:bg-primary-dark cursor-pointer" %>
    <%= link_to "초기화", employees_path, class: "text-sm text-gray-500 hover:text-gray-700 px-2 py-2" %>
  <% end %>

  <!-- 테이블 -->
  <div class="bg-white rounded-xl border border-gray-100 shadow-sm overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-100">
        <tr>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">이름</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">국적/부서</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">고용형태</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">현재 현장</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">비자 만료</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">계약 만료</th>
          <th class="px-4 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @employees.each do |emp| %>
          <%
            visa       = emp.active_visa
            contract   = emp.current_contract
            assignment = emp.current_assignment
          %>
          <tr class="hover:bg-gray-50 transition-colors <%= emp.active? ? '' : 'opacity-50' %>">
            <td class="px-4 py-3">
              <div class="font-medium text-gray-900"><%= emp.name %></div>
              <% if emp.name_en.present? %>
                <div class="text-xs text-gray-400"><%= emp.name_en %></div>
              <% end %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-600">
              <div><%= emp.nationality_label %></div>
              <div class="text-xs text-gray-400"><%= emp.department %></div>
            </td>
            <td class="px-4 py-3">
              <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-blue-50 text-blue-700">
                <%= emp.employment_type_label %>
              </span>
            </td>
            <td class="px-4 py-3 text-sm text-gray-600">
              <% if assignment %>
                <%= assignment.project.name %>
              <% else %>
                <span class="text-gray-300">-</span>
              <% end %>
            </td>
            <td class="px-4 py-3">
              <% if visa %>
                <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= visa.expiry_badge_class %>">
                  <%= visa.expiry_date.strftime("%Y-%m-%d") %>
                  <% if visa.days_until_expiry >= 0 %>
                    (D-<%= visa.days_until_expiry %>)
                  <% else %>
                    (만료)
                  <% end %>
                </span>
              <% else %>
                <span class="text-gray-300 text-xs">-</span>
              <% end %>
            </td>
            <td class="px-4 py-3">
              <% if contract&.end_date %>
                <%
                  days_left = (contract.end_date - Date.today).to_i
                  badge_class = if days_left < 0 then "bg-red-50 text-red-700"
                                elsif days_left <= 14 then "bg-red-50 text-red-700"
                                elsif days_left <= 30 then "bg-orange-50 text-orange-700"
                                else "bg-green-50 text-green-700" end
                %>
                <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= badge_class %>">
                  <%= contract.end_date.strftime("%Y-%m-%d") %>
                </span>
              <% else %>
                <span class="text-gray-300 text-xs">-</span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-right">
              <%= link_to "상세", emp, class: "text-xs text-primary hover:underline" %>
            </td>
          </tr>
        <% end %>
        <% if @employees.empty? %>
          <tr><td colspan="7" class="px-4 py-12 text-center text-gray-400 text-sm">등록된 직원이 없습니다.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
