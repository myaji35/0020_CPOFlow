<% content_for :title, @employee.name %>

<div class="flex flex-col gap-6">
  <!-- Header -->
  <div class="flex items-start justify-between">
    <div>
      <div class="flex items-center gap-2 text-sm text-gray-400 mb-1">
        <%= link_to "직원 관리", employees_path, class: "hover:text-primary" %>
        <span>/</span>
        <span><%= @employee.name %></span>
      </div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @employee.name %></h1>
      <div class="flex items-center gap-3 mt-2 text-sm text-gray-500">
        <% if @employee.name_en.present? %><span><%= @employee.name_en %></span><% end %>
        <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-blue-50 text-blue-700"><%= @employee.nationality_label %></span>
        <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-600"><%= @employee.employment_type_label %></span>
        <% unless @employee.active? %>
          <span class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full bg-red-50 text-red-700">퇴직</span>
        <% end %>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_employee_path(@employee), class: "inline-flex items-center gap-1 border border-gray-200 text-gray-600 px-3 py-2 rounded-lg text-sm hover:bg-gray-50" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
        수정
      <% end %>
      <% if current_user.manager? || current_user.admin? %>
        <%= link_to employee_path(@employee), data: { turbo_method: :delete, turbo_confirm: "직원을 삭제하시겠습니까?" },
            class: "inline-flex items-center gap-1 border border-red-200 text-red-600 px-3 py-2 rounded-lg text-sm hover:bg-red-50" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6l-1 14H6L5 6"/><path d="M10 11v6m4-6v6"/><path d="M9 6V4h6v2"/></svg>
          삭제
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- KPI 카드 -->
  <div class="grid grid-cols-4 gap-4">
    <div class="bg-white rounded-xl border border-gray-100 p-4 shadow-sm">
      <p class="text-xs text-gray-500">재직 기간</p>
      <% if @employee.hire_date %>
        <p class="text-xl font-bold text-gray-900 mt-1"><%= @employee.tenure_days %>일</p>
        <p class="text-xs text-gray-400"><%= @employee.hire_date.strftime("%Y.%m.%d") %> 입사</p>
      <% else %>
        <p class="text-xl font-bold text-gray-400 mt-1">-</p>
      <% end %>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 p-4 shadow-sm">
      <p class="text-xs text-gray-500">현재 현장</p>
      <% assignment = @employee.current_assignment %>
      <% if assignment %>
        <p class="text-sm font-bold text-primary mt-1"><%= assignment.project.name %></p>
        <p class="text-xs text-gray-400"><%= assignment.role %></p>
      <% else %>
        <p class="text-xl font-bold text-gray-400 mt-1">-</p>
      <% end %>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 p-4 shadow-sm">
      <p class="text-xs text-gray-500">비자 만료까지</p>
      <% visa = @employee.active_visa %>
      <% if visa %>
        <% days = visa.days_until_expiry %>
        <p class="text-xl font-bold <%= days <= 30 ? 'text-red-600' : days <= 60 ? 'text-yellow-600' : 'text-gray-900' %> mt-1">
          <%= days >= 0 ? "D-#{days}" : "만료됨" %>
        </p>
        <p class="text-xs text-gray-400"><%= visa.expiry_date.strftime("%Y.%m.%d") %></p>
      <% else %>
        <p class="text-xl font-bold text-gray-400 mt-1">-</p>
      <% end %>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 p-4 shadow-sm">
      <p class="text-xs text-gray-500">계약 만료까지</p>
      <% contract = @employee.current_contract %>
      <% if contract&.end_date %>
        <% days = (contract.end_date - Date.today).to_i %>
        <p class="text-xl font-bold <%= days <= 14 ? 'text-red-600' : days <= 30 ? 'text-orange-600' : 'text-gray-900' %> mt-1">
          <%= days >= 0 ? "D-#{days}" : "만료됨" %>
        </p>
        <p class="text-xs text-gray-400"><%= contract.end_date.strftime("%Y.%m.%d") %></p>
      <% else %>
        <p class="text-xl font-bold text-gray-400 mt-1">-</p>
      <% end %>
    </div>
  </div>

  <!-- 탭 -->
  <div x-data="{ tab: 'info' }" class="bg-white rounded-xl border border-gray-100 shadow-sm">
    <div class="border-b border-gray-100 px-4">
      <nav class="flex gap-6">
        <button @click="tab='info'" :class="tab==='info' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">기본정보</button>
        <button @click="tab='visas'" :class="tab==='visas' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">비자 (<%= @visas.count %>)</button>
        <button @click="tab='contracts'" :class="tab==='contracts' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">계약 (<%= @contracts.count %>)</button>
        <button @click="tab='assignments'" :class="tab==='assignments' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">현장 배정 (<%= @assignments.count %>)</button>
        <button @click="tab='certs'" :class="tab==='certs' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">자격증 (<%= @certifications.count %>)</button>
      </nav>
    </div>

    <!-- 기본정보 탭 -->
    <div x-show="tab==='info'" class="p-6">
      <dl class="grid grid-cols-2 gap-x-8 gap-y-4 text-sm">
        <div><dt class="text-gray-500">이름 (한글)</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.name %></dd></div>
        <div><dt class="text-gray-500">이름 (영문)</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.name_en.presence || "-" %></dd></div>
        <div><dt class="text-gray-500">국적</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.nationality_label %></dd></div>
        <div><dt class="text-gray-500">생년월일</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.date_of_birth&.strftime("%Y-%m-%d") || "-" %></dd></div>
        <% if current_user.manager? || current_user.admin? %>
          <div><dt class="text-gray-500">여권번호</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.passport_number.presence || "-" %></dd></div>
        <% end %>
        <div><dt class="text-gray-500">전화번호</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.phone.presence || "-" %></dd></div>
        <div><dt class="text-gray-500">비상 연락처</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.emergency_contact.presence || "-" %></dd></div>
        <div><dt class="text-gray-500">비상 연락전화</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.emergency_phone.presence || "-" %></dd></div>
        <div><dt class="text-gray-500">부서</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.department.presence || "-" %></dd></div>
        <div><dt class="text-gray-500">직급</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.job_title.presence || "-" %></dd></div>
        <div><dt class="text-gray-500">고용형태</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.employment_type_label %></dd></div>
        <div><dt class="text-gray-500">입사일</dt><dd class="font-medium text-gray-900 mt-1"><%= @employee.hire_date&.strftime("%Y-%m-%d") || "-" %></dd></div>
        <% if @employee.notes.present? %>
          <div class="col-span-2"><dt class="text-gray-500">메모</dt><dd class="font-medium text-gray-900 mt-1 whitespace-pre-wrap"><%= @employee.notes %></dd></div>
        <% end %>
      </dl>
    </div>

    <!-- 비자 탭 -->
    <div x-show="tab==='visas'" class="p-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="font-medium text-gray-900">비자 목록</h3>
        <%= link_to new_employee_visa_path(@employee), class: "inline-flex items-center gap-1 text-sm text-primary hover:underline" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
          비자 추가
        <% end %>
      </div>
      <div class="space-y-3">
        <% @visas.each do |visa| %>
          <div class="flex items-center justify-between p-3 border border-gray-100 rounded-lg hover:border-primary/30">
            <div class="flex items-center gap-4">
              <div>
                <div class="flex items-center gap-2">
                  <span class="font-medium text-sm text-gray-900"><%= visa.visa_type %></span>
                  <span class="text-xs text-gray-500">(<%= visa.issuing_country %>)</span>
                  <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= visa.expiry_badge_class %>">
                    <%= visa.expiry_date.strftime("%Y-%m-%d") %>
                    (<%= visa.days_until_expiry >= 0 ? "D-#{visa.days_until_expiry}" : "만료" %>)
                  </span>
                </div>
                <p class="text-xs text-gray-400 mt-0.5">번호: <%= visa.visa_number.presence || "-" %> | 발급: <%= visa.issue_date&.strftime("%Y-%m-%d") || "-" %></p>
              </div>
            </div>
            <div class="flex gap-2">
              <%= link_to edit_employee_visa_path(@employee, visa), class: "text-xs text-gray-400 hover:text-primary" do %>수정<% end %>
              <%= link_to employee_visa_path(@employee, visa), data: { turbo_method: :delete, turbo_confirm: "비자를 삭제하시겠습니까?" },
                  class: "text-xs text-gray-400 hover:text-red-500" do %>삭제<% end %>
            </div>
          </div>
        <% end %>
        <% if @visas.empty? %>
          <p class="text-center text-gray-400 text-sm py-8">등록된 비자가 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- 계약 탭 -->
    <div x-show="tab==='contracts'" class="p-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="font-medium text-gray-900">계약 이력</h3>
        <%= link_to new_employee_employment_contract_path(@employee), class: "inline-flex items-center gap-1 text-sm text-primary hover:underline" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
          계약 추가
        <% end %>
      </div>
      <div class="space-y-3">
        <% @contracts.each do |contract| %>
          <div class="flex items-center justify-between p-3 border border-gray-100 rounded-lg hover:border-primary/30">
            <div>
              <div class="flex items-center gap-2">
                <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= contract.status_badge_class %>"><%= contract.status_label %></span>
                <span class="text-sm font-medium text-gray-900">
                  <%= contract.start_date.strftime("%Y.%m.%d") %> ~
                  <%= contract.end_date&.strftime("%Y.%m.%d") || "기간 없음" %>
                </span>
              </div>
              <div class="text-xs text-gray-400 mt-0.5">
                <% if contract.base_salary.present? && (current_user.manager? || current_user.admin?) %>
                  급여: <%= contract.currency %> <%= number_with_delimiter(contract.base_salary.to_i) %> / <%= contract.pay_frequency_label %>
                <% end %>
                <% if contract.project.present? %>
                  | 현장: <%= contract.project.name %>
                <% end %>
              </div>
            </div>
            <div class="flex gap-2">
              <%= link_to edit_employee_employment_contract_path(@employee, contract), class: "text-xs text-gray-400 hover:text-primary" do %>수정<% end %>
              <%= link_to employee_employment_contract_path(@employee, contract),
                  data: { turbo_method: :delete, turbo_confirm: "계약을 삭제하시겠습니까?" },
                  class: "text-xs text-gray-400 hover:text-red-500" do %>삭제<% end %>
            </div>
          </div>
        <% end %>
        <% if @contracts.empty? %>
          <p class="text-center text-gray-400 text-sm py-8">등록된 계약이 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- 현장 배정 탭 -->
    <div x-show="tab==='assignments'" class="p-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="font-medium text-gray-900">현장 배정 이력</h3>
        <%= link_to new_employee_employee_assignment_path(@employee), class: "inline-flex items-center gap-1 text-sm text-primary hover:underline" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
          현장 배정
        <% end %>
      </div>
      <div class="space-y-3">
        <% @assignments.each do |asgn| %>
          <div class="flex items-center justify-between p-3 border border-gray-100 rounded-lg hover:border-primary/30">
            <div>
              <div class="flex items-center gap-2">
                <span class="font-medium text-sm text-gray-900"><%= asgn.project.name %></span>
                <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= asgn.status_badge_class %>"><%= asgn.status_label %></span>
              </div>
              <p class="text-xs text-gray-400 mt-0.5">
                <%= asgn.role.presence || "역할 미지정" %> |
                <%= asgn.start_date.strftime("%Y.%m.%d") %> ~
                <%= asgn.end_date&.strftime("%Y.%m.%d") || "현재" %>
              </p>
            </div>
            <div class="flex gap-2">
              <%= link_to edit_employee_employee_assignment_path(@employee, asgn), class: "text-xs text-gray-400 hover:text-primary" do %>수정<% end %>
              <%= link_to employee_employee_assignment_path(@employee, asgn),
                  data: { turbo_method: :delete, turbo_confirm: "배정을 삭제하시겠습니까?" },
                  class: "text-xs text-gray-400 hover:text-red-500" do %>삭제<% end %>
            </div>
          </div>
        <% end %>
        <% if @assignments.empty? %>
          <p class="text-center text-gray-400 text-sm py-8">현장 배정 이력이 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- 자격증 탭 -->
    <div x-show="tab==='certs'" class="p-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="font-medium text-gray-900">자격증/교육 이력</h3>
        <%= link_to new_employee_certification_path(@employee), class: "inline-flex items-center gap-1 text-sm text-primary hover:underline" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
          자격증 추가
        <% end %>
      </div>
      <div class="space-y-3">
        <% @certifications.each do |cert| %>
          <div class="flex items-center justify-between p-3 border border-gray-100 rounded-lg hover:border-primary/30">
            <div>
              <div class="flex items-center gap-2">
                <span class="font-medium text-sm text-gray-900"><%= cert.name %></span>
                <% if cert.expiry_date %>
                  <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= cert.expiry_badge_class %>">
                    <%= cert.expired? ? "만료" : cert.expiring_soon? ? "만료임박" : "유효" %>
                  </span>
                <% end %>
              </div>
              <p class="text-xs text-gray-400 mt-0.5">
                <%= cert.issuing_body.presence || "발급기관 미기재" %> |
                취득: <%= cert.issued_date&.strftime("%Y-%m-%d") || "-" %>
                <% if cert.expiry_date %>| 만료: <%= cert.expiry_date.strftime("%Y-%m-%d") %><% end %>
              </p>
            </div>
            <div class="flex gap-2">
              <%= link_to edit_employee_certification_path(@employee, cert), class: "text-xs text-gray-400 hover:text-primary" do %>수정<% end %>
              <%= link_to employee_certification_path(@employee, cert),
                  data: { turbo_method: :delete, turbo_confirm: "자격증을 삭제하시겠습니까?" },
                  class: "text-xs text-gray-400 hover:text-red-500" do %>삭제<% end %>
            </div>
          </div>
        <% end %>
        <% if @certifications.empty? %>
          <p class="text-center text-gray-400 text-sm py-8">등록된 자격증이 없습니다.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
