<%= form_with model: @project, local: true, class: "space-y-5" do |f| %>
  <% if @project.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <% @project.errors.full_messages.each do |msg| %><p class="text-sm text-red-700"><%= msg %></p><% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :name, "프로젝트명 *", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :client_id, "발주처 *", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :client_id,
          options_for_select(Client.active.by_name.map { |c| [c.name, c.id] }, @project.client_id),
          { prompt: "발주처 선택" },
          class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= f.label :site_category, "현장 유형", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :site_category,
          options_for_select([["선택", ""]] + Project::SITE_CATEGORIES.map { |c| [{ "nuclear"=>"원전","hydro"=>"수력","tunnel"=>"터널","gtx"=>"GTX","general"=>"일반" }[c] || c, c] }, @project.site_category),
          {}, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :status, "상태", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status,
          options_for_select([["계획", "planning"],["진행중", "active"],["완료", "completed"],["중단", "suspended"]], @project.status),
          {}, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :country, "국가", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :country, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
  </div>

  <div>
    <%= f.label :location, "현장 위치", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :location, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary", placeholder: "예: Abu Dhabi, UAE" %>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= f.label :budget, "예산", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :budget, step: 0.01, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :currency, "통화", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :currency,
          options_for_select(["USD","KRW","EUR","AED"].map { |c| [c, c] }, @project.currency || "USD"),
          {}, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :code, "프로젝트 코드", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :code, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :start_date, "시작일", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :start_date, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <div>
      <%= f.label :end_date, "종료 예정일", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :end_date, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
  </div>

  <div>
    <%= f.label :description, "설명", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
  </div>

  <div class="flex gap-3 pt-2">
    <%= f.submit @project.new_record? ? "등록" : "수정", class: "bg-primary text-white px-6 py-2 rounded-lg text-sm font-medium hover:bg-primary-dark transition-colors cursor-pointer" %>
    <%= link_to "취소", @project.new_record? ? projects_path : @project, class: "border border-gray-200 text-gray-600 px-6 py-2 rounded-lg text-sm font-medium hover:bg-gray-50" %>
  </div>
<% end %>
