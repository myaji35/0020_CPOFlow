<% content_for :title, @department.name %>

<div class="flex flex-col gap-6">
  <%# Header %>
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <%= link_to org_chart_company_path(@company), class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"/></svg>
      <% end %>
      <div>
        <div class="flex items-center gap-2">
          <h1 class="text-2xl font-bold text-gray-900"><%= @department.name %></h1>
          <% if @department.code.present? %>
            <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-600"><%= @department.code %></span>
          <% end %>
          <% unless @department.active? %>
            <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-500">비활성</span>
          <% end %>
        </div>
        <p class="text-sm text-gray-500 mt-0.5">
          <%= @company.name %>
          <% if @department.parent %>
            · <%= @department.parent.name %> 하위 부서
          <% end %>
        </p>
      </div>
    </div>
    <% if current_user.manager? || current_user.admin? %>
      <div class="flex gap-2">
        <%= link_to new_org_chart_company_department_path(@company, parent_id: @department.id),
            class: "inline-flex items-center gap-1.5 px-3 py-2 bg-primary text-white text-sm font-medium rounded-lg hover:bg-primary/90 transition-colors" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
          하위 부서 추가
        <% end %>
        <%= link_to edit_org_chart_company_department_path(@company, @department),
            class: "inline-flex items-center gap-1.5 px-3 py-2 border border-gray-200 text-gray-600 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
          수정
        <% end %>
      </div>
    <% end %>
  </div>

  <%# 통계 카드 %>
  <div class="grid grid-cols-3 gap-4">
    <div class="bg-white rounded-xl border border-gray-200 p-4">
      <p class="text-xs text-gray-400">총 직원</p>
      <p class="text-2xl font-bold text-gray-900 mt-1"><%= @employees.count %><span class="text-sm font-normal text-gray-500 ml-1">명</span></p>
    </div>
    <div class="bg-white rounded-xl border border-gray-200 p-4">
      <p class="text-xs text-gray-400">하위 부서</p>
      <p class="text-2xl font-bold text-gray-900 mt-1"><%= @department.sub_departments.active.count %><span class="text-sm font-normal text-gray-500 ml-1">개</span></p>
    </div>
    <div class="bg-white rounded-xl border border-gray-200 p-4">
      <p class="text-xs text-gray-400">비자 보유</p>
      <p class="text-2xl font-bold text-gray-900 mt-1"><%= @employees.count(&:active_visa) %><span class="text-sm font-normal text-gray-500 ml-1">명</span></p>
    </div>
  </div>

  <%# 직원 목록 %>
  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <div class="px-5 py-4 border-b border-gray-100">
      <h2 class="text-sm font-semibold text-gray-700">소속 직원</h2>
    </div>

    <% if @employees.empty? %>
      <div class="p-8 text-center text-sm text-gray-400">
        배속된 직원이 없습니다.
      </div>
    <% else %>
      <div class="divide-y divide-gray-50">
        <% @employees.each do |emp| %>
          <%= link_to employee_path(emp), class: "flex items-center justify-between px-5 py-3 hover:bg-gray-50 transition-colors" do %>
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold">
                <%= emp.name.first.upcase %>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900"><%= emp.name %></p>
                <% if emp.job_title.present? %>
                  <p class="text-xs text-gray-400"><%= emp.job_title %></p>
                <% end %>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <% if emp.active_visa %>
                <span class="inline-flex items-center gap-1 text-xs px-2 py-0.5 rounded-full <%= emp.visa_expiring_soon? ? 'bg-red-50 text-red-600' : 'bg-green-50 text-green-600' %>">
                  <span class="w-1.5 h-1.5 rounded-full <%= emp.visa_expiring_soon? ? 'bg-red-400' : 'bg-green-400' %>"></span>
                  비자 <%= emp.visa_expiring_soon? ? '만료임박' : '정상' %>
                </span>
              <% end %>
              <svg class="w-4 h-4 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"/></svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# 하위 부서 %>
  <% sub_depts = @department.sub_departments.active.by_sort %>
  <% if sub_depts.any? %>
    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-5 py-4 border-b border-gray-100">
        <h2 class="text-sm font-semibold text-gray-700">하위 부서</h2>
      </div>
      <div class="divide-y divide-gray-50">
        <% sub_depts.each do |sub| %>
          <div class="flex items-center justify-between px-5 py-3">
            <div class="flex items-center gap-3">
              <div class="w-7 h-7 rounded-md bg-gray-100 flex items-center justify-center">
                <svg class="w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg>
              </div>
              <span class="text-sm text-gray-800"><%= sub.name %></span>
              <% if sub.code.present? %>
                <span class="text-xs text-gray-400">(<%= sub.code %>)</span>
              <% end %>
            </div>
            <div class="flex items-center gap-3">
              <span class="text-xs text-gray-400"><%= sub.employee_count %>명</span>
              <% if current_user.manager? || current_user.admin? %>
                <%= link_to edit_org_chart_company_department_path(@company, sub),
                    class: "text-xs text-gray-400 hover:text-primary px-1.5 py-0.5 rounded hover:bg-gray-100" do %>수정<% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
