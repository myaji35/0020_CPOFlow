<% content_for :title, "국가 관리" %>

<div class="max-w-3xl mx-auto py-8 px-4">
  <div class="flex items-center justify-between mb-6">
    <div>
      <div class="flex items-center gap-2 text-sm text-gray-400 mb-1">
        <%= link_to "조직도", org_chart_path, class: "hover:text-primary" %>
        <span>/</span>
        <span>국가 관리</span>
      </div>
      <h1 class="text-xl font-bold text-gray-900">국가 관리</h1>
    </div>
    <%= link_to new_org_chart_country_path, class: "inline-flex items-center gap-1.5 px-3 py-2 bg-primary text-white text-sm font-medium rounded-lg hover:bg-primary/90" do %>
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      국가 추가
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <% if @countries.empty? %>
      <p class="text-center text-gray-400 text-sm py-12">등록된 국가가 없습니다.</p>
    <% else %>
      <table class="w-full text-sm">
        <thead class="bg-gray-50 border-b border-gray-100">
          <tr>
            <th class="text-left px-4 py-3 text-xs font-medium text-gray-500">국가</th>
            <th class="text-left px-4 py-3 text-xs font-medium text-gray-500">지역</th>
            <th class="text-left px-4 py-3 text-xs font-medium text-gray-500">법인 수</th>
            <th class="px-4 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-50">
          <% @countries.each do |country| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3">
                <span class="mr-2"><%= country.flag_emoji %></span>
                <span class="font-medium text-gray-900"><%= country.name %></span>
                <span class="text-gray-400 ml-1"><%= country.name_en %></span>
                <span class="text-xs text-gray-400 ml-1">(<%= country.code %>)</span>
              </td>
              <td class="px-4 py-3 text-gray-500"><%= country.region %></td>
              <td class="px-4 py-3 text-gray-500"><%= country.companies.count %>개</td>
              <td class="px-4 py-3 text-right">
                <%= link_to "수정", edit_org_chart_country_path(country), class: "text-xs text-primary hover:underline mr-3" %>
                <%= link_to "삭제", org_chart_country_path(country),
                    data: { turbo_method: :delete, turbo_confirm: "#{country.name}을(를) 삭제하시겠습니까?" },
                    class: "text-xs text-red-500 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
