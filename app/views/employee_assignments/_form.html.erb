<%= form_with model: [@employee, assignment], class: "flex flex-col gap-4" do |f| %>
  <% if assignment.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
      <% assignment.errors.full_messages.each do |msg| %><p><%= msg %></p><% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-4">
    <div class="col-span-2">
      <%= f.label :project_id, "현장 *", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.select :project_id,
          @projects.map { |p| ["#{p.name} (#{p.site_category_label})", p.id] },
          { include_blank: "현장 선택" },
          class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :role, "역할", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.text_field :role, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary", placeholder: "구매 담당자" %>
    </div>
    <div>
      <%= f.label :status, "상태", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.select :status, [["배정중", "active"], ["완료", "completed"], ["취소", "cancelled"]], {},
          class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :start_date, "시작일 *", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.date_field :start_date, required: true, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div>
      <%= f.label :end_date, "종료일", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.date_field :end_date, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary" %>
    </div>
    <div class="col-span-2">
      <%= f.label :notes, "메모", class: "block text-xs font-medium text-gray-600 mb-1" %>
      <%= f.text_area :notes, rows: 2, class: "w-full border border-gray-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-primary resize-none" %>
    </div>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "취소", @employee, class: "px-4 py-2 border border-gray-200 rounded-lg text-sm text-gray-600 hover:bg-gray-50" %>
    <%= f.submit assignment.new_record? ? "배정 등록" : "저장",
        class: "px-4 py-2 bg-primary text-white rounded-lg text-sm font-medium hover:bg-primary-dark cursor-pointer" %>
  </div>
<% end %>
