<% content_for :title, @supplier.name %>

<div class="flex flex-col gap-6">
  <!-- Header -->
  <div class="flex items-start justify-between">
    <div>
      <div class="flex items-center gap-2 text-sm text-gray-400 mb-1">
        <%= link_to "거래처 관리", suppliers_path, class: "hover:text-primary" %>
        <span>/</span>
        <span><%= @supplier.name %></span>
      </div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @supplier.name %></h1>
      <div class="flex items-center gap-3 mt-2 text-sm text-gray-500">
        <span><%= @supplier.country %></span>
        <% if @supplier.industry.present? %><span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-purple-50 text-purple-700"><%= @supplier.industry_label %></span><% end %>
        <% if @supplier.credit_grade.present? %><span class="text-xs font-bold"><%= @supplier.credit_grade %>등급</span><% end %>
        <% if @supplier.payment_terms.present? %><span><%= @supplier.payment_terms %></span><% end %>
        <% if @supplier.lead_time_days.present? %><span>리드타임 <%= @supplier.lead_time_days %>일</span><% end %>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_supplier_path(@supplier), class: "inline-flex items-center gap-1 border border-gray-200 text-gray-600 px-3 py-2 rounded-lg text-sm hover:bg-gray-50" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
        수정
      <% end %>
    </div>
  </div>

  <!-- KPI -->
  <div class="grid grid-cols-3 gap-4">
    <div class="bg-white rounded-xl border border-gray-100 p-4 shadow-sm">
      <p class="text-xs text-gray-500">총 공급 오더</p>
      <p class="text-2xl font-bold text-gray-900 mt-1"><%= @orders.count %></p>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 p-4 shadow-sm">
      <p class="text-xs text-gray-500">총 공급 금액</p>
      <p class="text-xl font-bold text-primary mt-1">$<%= number_with_delimiter(@supplier.total_supply_value.round.to_i) %></p>
    </div>
    <div class="bg-white rounded-xl border border-gray-100 p-4 shadow-sm">
      <p class="text-xs text-gray-500">납품 품목</p>
      <p class="text-2xl font-bold text-gray-900 mt-1"><%= @supplier_products.count %></p>
    </div>
  </div>

  <!-- 탭 -->
  <div x-data="{ tab: 'contacts' }" class="bg-white rounded-xl border border-gray-100 shadow-sm">
    <div class="border-b border-gray-100 px-4">
      <nav class="flex gap-6">
        <button @click="tab='contacts'" :class="tab==='contacts' ? 'border-primary text-primary' : 'border-transparent text-gray-500'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">담당자</button>
        <button @click="tab='products'" :class="tab==='products' ? 'border-primary text-primary' : 'border-transparent text-gray-500'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">납품 품목</button>
        <button @click="tab='orders'" :class="tab==='orders' ? 'border-primary text-primary' : 'border-transparent text-gray-500'"
            class="py-3 border-b-2 text-sm font-medium transition-colors">납품 이력</button>
      </nav>
    </div>

    <div x-show="tab==='contacts'" class="p-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="font-medium text-gray-900">담당자 목록</h3>
        <%= link_to new_supplier_contact_person_path(@supplier), class: "inline-flex items-center gap-1 text-sm text-primary hover:underline" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
          담당자 추가
        <% end %>
      </div>
      <div class="space-y-3">
        <% @contact_persons.each do |cp| %>
          <div class="flex items-center justify-between p-3 border border-gray-100 rounded-lg">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-full bg-purple-100 flex items-center justify-center text-purple-700 font-bold text-sm"><%= cp.name.first.upcase %></div>
              <div>
                <div class="font-medium text-sm"><%= cp.display_name %> <span class="text-xs text-gray-400 ml-1"><%= cp.language_label %></span></div>
                <p class="text-xs text-gray-500"><%= cp.title %></p>
                <div class="text-xs text-gray-400 mt-0.5">
                  <%= cp.email %> <% if cp.phone.present? %> | <%= cp.phone %><% end %>
                </div>
              </div>
            </div>
            <div class="flex gap-2">
              <%= link_to edit_supplier_contact_person_path(@supplier, cp), class: "text-xs text-gray-400 hover:text-primary" do %>수정<% end %>
              <%= link_to supplier_contact_person_path(@supplier, cp), data: { turbo_method: :delete, turbo_confirm: "삭제?" }, class: "text-xs text-gray-400 hover:text-red-500" do %>삭제<% end %>
            </div>
          </div>
        <% end %>
        <% if @contact_persons.empty? %><p class="text-center text-gray-400 text-sm py-8">등록된 담당자가 없습니다.</p><% end %>
      </div>
    </div>

    <div x-show="tab==='products'" class="p-4">
      <h3 class="font-medium text-gray-900 mb-4">납품 가능 품목</h3>
      <div class="space-y-2">
        <% @supplier_products.each do |sp| %>
          <div class="flex items-center justify-between p-3 border border-gray-100 rounded-lg">
            <span class="text-sm font-medium text-gray-900"><%= sp.product.name %></span>
            <div class="flex items-center gap-4">
              <span class="text-sm text-gray-600"><%= sp.display_price %></span>
              <% if sp.lead_time_days.present? %><span class="text-xs text-gray-400"><%= sp.lead_time_days %>일</span><% end %>
            </div>
          </div>
        <% end %>
        <% if @supplier_products.empty? %><p class="text-center text-gray-400 text-sm py-8">등록된 납품 품목이 없습니다.</p><% end %>
      </div>
    </div>

    <div x-show="tab==='orders'" class="p-4">
      <h3 class="font-medium text-gray-900 mb-4">최근 납품 이력</h3>
      <div class="space-y-2">
        <% @orders.each do |order| %>
          <div class="flex items-center justify-between p-3 border border-gray-100 rounded-lg">
            <span class="text-sm font-medium text-gray-900"><%= order.title %></span>
            <div class="flex items-center gap-3">
              <% if order.estimated_value.present? %><span class="text-sm text-gray-700">$<%= number_with_delimiter(order.estimated_value.round.to_i) %></span><% end %>
              <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-600"><%= order.status %></span>
              <%= link_to "상세", order, class: "text-xs text-primary hover:underline" %>
            </div>
          </div>
        <% end %>
        <% if @orders.empty? %><p class="text-center text-gray-400 text-sm py-8">납품 이력이 없습니다.</p><% end %>
      </div>
    </div>
  </div>
</div>
