<% content_for :title, "거래처 관리" %>

<div class="flex flex-col gap-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">거래처 (공급사) 관리</h1>
      <p class="text-sm text-gray-500 mt-1">공급사별 거래 현황, 담당자, 납품 품목 관리</p>
    </div>
    <%= link_to new_supplier_path, class: "inline-flex items-center gap-2 bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-primary-dark transition-colors" do %>
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      새 거래처 등록
    <% end %>
  </div>

  <!-- 검색 -->
  <%= form_with url: suppliers_path, method: :get, local: true, class: "flex gap-3 items-center" do |f| %>
    <div class="relative flex-1 max-w-xs">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
      <%= f.text_field :q, placeholder: "거래처명, 코드 검색...", value: params[:q],
          class: "w-full pl-9 pr-3 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" %>
    </div>
    <%= f.select :country, options_for_select([["전체 국가", ""], ["AE", "AE"], ["KR", "KR"], ["CH", "CH"]], params[:country]),
        {}, class: "border border-gray-200 rounded-lg px-3 py-2 text-sm" %>
    <%= f.submit "검색", class: "bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 cursor-pointer" %>
  <% end %>

  <!-- 테이블 -->
  <div class="bg-white rounded-xl border border-gray-100 shadow-sm overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-100">
        <tr>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">거래처명</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">국가</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">산업</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">등급</th>
          <th class="text-left px-4 py-3 text-xs font-semibold text-gray-500 uppercase">결제조건</th>
          <th class="text-right px-4 py-3 text-xs font-semibold text-gray-500 uppercase">오더</th>
          <th class="px-4 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @suppliers.each do |supplier| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-4 py-3">
              <div class="font-medium text-gray-900"><%= supplier.name %></div>
              <div class="text-xs text-gray-400"><%= supplier.ecount_code %></div>
            </td>
            <td class="px-4 py-3 text-sm text-gray-600"><%= supplier.country %></td>
            <td class="px-4 py-3">
              <% if supplier.industry.present? %>
                <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-purple-50 text-purple-700"><%= supplier.industry_label %></span>
              <% end %>
            </td>
            <td class="px-4 py-3">
              <% if supplier.credit_grade.present? %>
                <% grade_class = { "A"=>"bg-green-50 text-green-700","B"=>"bg-blue-50 text-blue-700","C"=>"bg-yellow-50 text-yellow-700","D"=>"bg-red-50 text-red-700" }[supplier.credit_grade] || "bg-gray-50 text-gray-700" %>
                <span class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full <%= grade_class %>"><%= supplier.credit_grade %></span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-600"><%= supplier.payment_terms %></td>
            <td class="px-4 py-3 text-right text-sm text-gray-700"><%= supplier.orders.count %></td>
            <td class="px-4 py-3 text-right">
              <%= link_to "상세", supplier, class: "text-xs text-primary hover:underline" %>
            </td>
          </tr>
        <% end %>
        <% if @suppliers.empty? %>
          <tr><td colspan="7" class="px-4 py-12 text-center text-gray-400 text-sm">등록된 거래처가 없습니다.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
