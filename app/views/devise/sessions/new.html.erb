<div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
  <h2 class="text-xl font-semibold text-gray-900 mb-6">Sign in to your account</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-accent" %>
          <%= f.label :remember_me, "Remember me", class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <%= f.submit "Sign in",
          class: "w-full bg-primary text-white font-medium py-2.5 px-4 rounded-lg hover:bg-primary-dark transition-colors cursor-pointer mt-2" %>
    </div>
  <% end %>

  <div class="mt-6 pt-6 border-t border-gray-100 text-center text-xs text-gray-400">
    <p>Demo: admin@atozone.com / password123</p>
  </div>
</div>
