<div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
  <h2 class="text-xl font-semibold text-gray-900 mb-6">계정 만들기</h2>

  <%# ── Google 회원가입 버튼 ─────────────────────────── %>
  <%= link_to user_google_oauth2_omniauth_authorize_path,
      method: :post,
      data: { turbo: false },
      class: "flex items-center justify-center gap-3 w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors mb-5" do %>
    <svg class="w-5 h-5 flex-shrink-0" viewBox="0 0 24 24">
      <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
      <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
      <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z"/>
      <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
    </svg>
    Google로 시작하기
  <% end %>

  <%# ── 구분선 ────────────────────────────────────────── %>
  <div class="relative my-5">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-200"></div>
    </div>
    <div class="relative flex justify-center text-xs text-gray-400">
      <span class="bg-white px-3">또는 이메일로 가입</span>
    </div>
  </div>

  <%# ── 회원가입 폼 ────────────────────────────────────── %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.any? %>
      <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg">
        <ul class="text-sm text-red-700 space-y-1 list-disc list-inside">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-4">

      <%# 회사명 %>
      <div>
        <%= f.label :company_name, "회사명", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :company_name,
            autofocus: true,
            placeholder: "예) AtoZ2010 Inc.",
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent" %>
      </div>

      <%# 이름 %>
      <div>
        <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name,
            placeholder: "홍길동",
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent" %>
      </div>

      <%# 이메일 %>
      <div>
        <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
            autocomplete: "email",
            placeholder: "name@company.com",
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent" %>
      </div>

      <%# 비밀번호 %>
      <div>
        <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
            autocomplete: "new-password",
            placeholder: "6자 이상",
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-gray-400">최소 <%= @minimum_password_length %>자 이상</p>
        <% end %>
      </div>

      <%# 비밀번호 확인 %>
      <div>
        <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            placeholder: "비밀번호를 다시 입력",
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent" %>
      </div>

      <%= f.submit "가입하기",
          class: "w-full bg-primary text-white font-medium py-2.5 px-4 rounded-lg hover:bg-primary-dark transition-colors cursor-pointer mt-2" %>
    </div>
  <% end %>

  <%# ── 로그인 링크 ─────────────────────────────────── %>
  <p class="mt-5 text-center text-sm text-gray-500">
    이미 계정이 있으신가요?
    <%= link_to "로그인", new_session_path(resource_name), class: "text-accent font-medium hover:underline" %>
  </p>
</div>
